<Dialog id="loginRegisterDialog" showHeader="false" contentWidth="420px" class="loginDialog" xmlns="sap.m">
    <VBox class="loginBox">
        <!-- Login Form -->
        <VBox id="loginForm" class="formBox fadeIn">
            <Image src="https://companieslogo.com/img/orig/LTIM.NS-dea59dc6.png" width="100px" class="logo"/>
            <Title text="Login to Your Account" level="H1" class="loginTitle"/>
            <Label text="Email Address" class="inputLabel" required="true"/>
            <Input id="emailInput" type="Email" class="inputField" placeholder="Enter your email address"/>
            <Label text="Password" class="inputLabel" required="true"/>
            <Input id="passwordInput" type="Password" class="inputField" showValueHelp="true" valueHelpIconSrc="sap-icon://show" placeholder="Enter your password" valueHelpRequest="onToggleLoginPasswordVisibility"/>
            <CheckBox text="Remember Me" class="checkbox"/>
            <Button text="Sign In" press="onLoginPress" class="loginButton"/>
            <Link text="Forgot your password?" press="onForgotPasswordPress" class="link"/>
            <Link text="New here? Create an account" press="onToggleForm" class="link"/>
        </VBox>
        <!-- Registration Form -->
        <VBox id="registerForm" visible="false" class="formBox fadeIn">
            <Title text="Create Your Account" level="H1" class="loginTitle"/>
            <Label text="Full Name" class="inputLabel" required="true"/>
            <Input id="fullName" placeholder="Enter your full name" class="inputField"/>
            <Label text="Email Address" class="inputLabel" required="true"/>
            <Input id="registerEmail" placeholder="Enter your email" type="Email" class="inputField"/>
            <Label text="Mobile Number" class="inputLabel" required="true"/>
            <Input id="mobileNumber" placeholder="Enter your mobile number" type="Tel" class="inputField"/>
            <Label text="Username" class="inputLabel" required="true"/>
            <Input id="username" placeholder="Choose a username" class="inputField"/>
            <Label text="Password" class="inputLabel" required="true"/>
            <Input id="registerPassword" placeholder="Create a password" type="Password" class="inputField" showValueHelp="true" valueHelpIconSrc="sap-icon://show" valueHelpRequest="onToggleRegisterPasswordVisibility"/>
            <Label text="Confirm Password" class="inputLabel" required="true"/>
            <Input id="confirmPassword" placeholder="Re-enter your password" type="Password" class="inputField" showValueHelp="true" valueHelpIconSrc="sap-icon://show" valueHelpRequest="onToggleConfirmPasswordVisibility"/>
            <CheckBox id="terms" text="I agree to the Terms &amp; Conditions" class="checkbox"/>
            <Button text="Register Account" press="onRegister" type="Emphasized" class="loginButton"/>
            <Link text="Already have an account? Sign In" press="onToggleForm" class="link"/>
        </VBox>
    </VBox>
</Dialog>