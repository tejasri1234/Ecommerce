<mvc:View controllerName="project.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page id="page" showHeader="false">
        <content>
            <VBox class="customNavBar" xmlns="sap.m">
                <HBox alignItems="Center" justifyContent="SpaceBetween" height="3rem" width="100%">
                    <!-- Left Section: Menu + Logo -->
                    <HBox alignItems="Center" class="leftSection" width="20%">
                        <Button icon="sap-icon://menu" press="onMenuPress" class="largeIconButton" type="Transparent"/>
                        <HBox alignItems="Center" class="logoBox">
                            <Text text="Fresh" class="freshText"/>
                            <Text text="Mart" class="martText"/>
                        </HBox>
                    </HBox>
                    <!-- Middle Section: Search -->
                    <HBox width="50%" class="searchBox" alignItems="Center">
                        <SearchField placeholder="Search groceries..." width="150%" liveChange="onSearch"/>
                        <HBox width="100%" class="searchResultsBox" visible="{= !!${searchModel>/results}.length }">
                            <List items="{searchModel>/results}" width="150%" class="searchResultsList">
                                <CustomListItem>
                                    <HBox alignItems="Center" width="100%">
                                        <Image src="{searchModel>image}" width="3rem"/>
                                        <VBox>
                                            <Text text="{searchModel>name}" class="productName"/>
                                        </VBox>
                                    </HBox>
                                </CustomListItem>
                            </List>
                        </HBox>
                    </HBox>
                    <!-- Right Section: Icons -->
                    <HBox alignItems="Center" justifyContent="End" width="20%" class="rightIcons">
                        <Button icon="sap-icon://customer" press="onProfilePress" class="largeIconButton" type="Transparent"/>
                        <Button icon="sap-icon://cart" press="onCartPress" class="largeIconButton" type="Transparent"/>
                    </HBox>                    
                </HBox>
                
            </VBox>

            
            <HBox wrap="Wrap" class="cardContainer" justifyContent="Start">
                <VBox class="groceryCard" width="10em" height="10rem">
                    <Image src="images/img1.png" densityAware="false" press="onImagePress1"/>                   
                </VBox>
                <VBox class="groceryCard" width="10em" height="10rem">
                    <Image src="images/img2.png" densityAware="false" press="onImagePress2"/>
                    
                </VBox>
                <VBox class="groceryCard" width="10em" height="10rem">
                    <Image src="images/img3.png" densityAware="false" press="onImagePress3"/>
                    
                </VBox>
                <VBox class="groceryCard" width="10em" height="10rem">
                    <Image src="images/img4.png" densityAware="false" press="onImagePress4"/>
                    
                </VBox>
                <VBox class="groceryCard" width="10em" height="10rem">
                    <Image src="images/img5.png" densityAware="false" press="onImagePress5"/>
                    
                </VBox>
                <VBox class="groceryCard" width="10em" height="10rem">
                    <Image src="images/img6.png" densityAware="false" press="onImagePress6"/>
                    
                </VBox>
                <VBox class="groceryCard" width="10em" height="10rem">
                    <Image src="images/img7.png" densityAware="false" press="onImagePress7"/>
                    
                </VBox>
            </HBox>
            <HBox width="90%" class="bannerBox">                
                <VBox class="bannerTextBox">
                    <Text text="Groceries" class="bannerText" />
                    <Text text="delivered in" class="bannerText" />
                    <Text text="10 Minutes" class="bannerText" />
                </VBox>

                <Image src="images/banner.png" alt="Special Offer" densityAware="false" class="bannerImage"/>

            </HBox>
            <VBox class="customFooter">
                <HBox class="footerContent" >
                    <Label class="footerText" text="Â© 2025 FreshMart. All rights reserved." />
                    <HBox class="footerLinks" >
                        <Link class="footerLink" text="Privacy Policy" href="/privacy" />
                        <Link class="footerLink" text="Terms of Service" href="/terms" />
                        <Link class="footerLink" text="Contact Us" href="/contact" />
                    </HBox>
                </HBox>
            </VBox>

        </content>
    </Page>
    <Dialog id="loginRegisterDialog" showHeader="false" contentWidth="370px"  class="loginDialog" xmlns="sap.m">
    <VBox class="loginBox">
        <!-- Login Form -->
        <VBox id="loginForm" class="formBox fadeIn">
            <Button icon="sap-icon://decline"
                type="Transparent"
                press="onCloseLoginDialog"
                class="closeLoginDialogButton"
                tooltip="Close"/>

            <Title text="Login to Your Account" level="H1" class="loginTitle"/>
            <Label text="Email Address" class="inputLabel" required="true"/>
            <Input id="emailInput" type="Email" class="inputField" />
            <Label text="Password" class="inputLabel" required="true"/>
            <Input id="passwordInput" type="Password" class="inputField" showValueHelp="true" valueHelpIconSrc="sap-icon://show" valueHelpRequest="onToggleLoginPasswordVisibility"/>
            <Button text="Sign In" press="onLoginPress" class="loginButton"/>
            <Link text="Forgot your password?" press="onForgotPasswordPress" class="link"/>
            <Link text="New here? Create an account" press="onToggleForm" class="link"/>
        </VBox>
        <!-- Registration Form -->
        <VBox id="registerForm" visible="false" class="formBox fadeIn">
            <Title text="Create Your Account" level="H1" class="loginTitle"/>
            <Label text="Full Name" class="inputLabel" required="true"/>
            <Input id="fullName" class="inputField"/>
            <Label text="Email Address" class="inputLabel" required="true"/>
            <Input id="registerEmail"  type="Email" class="inputField"/>
            <Label text="Mobile Number" class="inputLabel" required="true"/>
            <Input id="mobileNumber"  type="Tel" class="inputField"/>
            <Label text="Password" class="inputLabel" required="true"/>
            <Input id="registerPassword"  type="Password" class="inputField" showValueHelp="true" valueHelpIconSrc="sap-icon://show" valueHelpRequest="onToggleRegisterPasswordVisibility"/>
            <Label text="Confirm Password" class="inputLabel" required="true"/>
            <Input id="confirmPassword"  type="Password" class="inputField" showValueHelp="true" valueHelpIconSrc="sap-icon://show" valueHelpRequest="onToggleConfirmPasswordVisibility"/>
            <CheckBox id="terms" text="I agree to the Terms &amp; Conditions" class="checkbox"/>
            <Button text="Register Account" press="onRegister" type="Emphasized" class="loginButton"/>
            <Link text="Already have an account? Sign In" press="onToggleForm" class="link"/>
        </VBox>
    </VBox>
</Dialog>
    <core:Fragment fragmentName="project.view.CartPanel" type="XML" xmlns:core="sap.ui.core"/>

</mvc:View>