<mvc:View controllerName="project.controller.View1"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page id="page" showHeader="false">
        <content>
            <VBox class="customNavBar">
                <HBox alignItems="Center" justifyContent="SpaceBetween" height="3rem" width="100%">
                    
                    <!-- Left Section: Menu + Logo -->
                    <HBox alignItems="Center" class="leftSection" width="20%">
                        <Button icon="sap-icon://menu" press="onMenuPress" class="largeIconButton"/>
                        <HBox alignItems="Center" class="logoBox">
                            <Text text="Fresh" class="freshText"/>
                            <Text text="Mart" class="martText"/>
                        </HBox>
                    </HBox>

                    <!-- Middle Section: Search -->
                    <HBox width="50%" class="searchBox" alignItems="Center">
                        <SearchField placeholder="Search groceries..." width="120%" liveChange="onSearch"/>
                    </HBox>

                    <!-- Right Section: Icons -->
                    <HBox alignItems="Center" justifyContent="End" width="20%" class="rightIcons">
                        <Button icon="sap-icon://customer" press="onProfilePress" class="largeIconButton"/>
                        <Button icon="sap-icon://heart" press="onWishlistPress" class="largeIconButton"/>
                        <Button icon="sap-icon://cart" press="onCartPress" class="largeIconButton"/>
                    </HBox>                    
                </HBox>
            </VBox>
            <HBox wrap="Wrap" class="cardContainer" justifyContent="Start">
                <VBox class="groceryCard" width="10em" height="10rem">
                    <Image src="images/img1.png" densityAware="false"/>
                    
                </VBox>
                <VBox class="groceryCard" width="10em" height="10rem">
                    <Image src="images/img2.png" densityAware="false"/>
                    
                </VBox>
                <VBox class="groceryCard" width="10em" height="10rem">
                    <Image src="images/img3.png" densityAware="false"/>
                    
                </VBox>
                <VBox class="groceryCard" width="10em" height="10rem">
                    <Image src="images/img4.png" densityAware="false"/>
                    
                </VBox>
                <VBox class="groceryCard" width="10em" height="10rem">
                    <Image src="images/img9.png" densityAware="false"/>
                    
                </VBox>
                <VBox class="groceryCard" width="10em" height="10rem">
                    <Image src="images/img6.png" densityAware="false"/>
                    
                </VBox>
                <VBox class="groceryCard" width="10em" height="10rem">
                    <Image src="images/img12.png" densityAware="false"/>
                    
                </VBox>
            </HBox>
            <HBox width="90%" class="bannerBox">                
                <VBox class="bannerTextBox">
                    <Text text="Groceries" class="bannerText" />
                    <Text text="delivered in" class="bannerText" />
                    <Text text="10 Minutes" class="bannerText" />
                </VBox>

                <Image src="images/banner.png" alt="Special Offer" densityAware="false" class="bannerImage"/>

            </HBox>
        </content>
    </Page>
</mvc:View>