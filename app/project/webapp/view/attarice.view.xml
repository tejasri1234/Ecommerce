<mvc:View
    controllerName="project.controller.attarice"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
>
    <Page id="page3">
        <content>
            <VBox class="customNavBar">
                <HBox alignItems="Center" justifyContent="SpaceBetween" height="3rem" width="100%">
                    <HBox alignItems="Center" class="leftSection" width="20%">
                        <Button
                            icon="sap-icon://menu"
                            press="onMenuPress"
                            class="largeIconButton"
                        />
                        <HBox
                            alignItems="Center"
                            class="logoBox">
                            <Text
                                text="Fresh"
                                class="freshText"
                            />
                            <Text
                                text="Mart"
                                class="martText"
                            />
                        </HBox>
                    </HBox>
                    <HBox
                        width="50%"
                        class="searchBox"
                        alignItems="Center"
                    >
                        <SearchField
                            placeholder="Search groceries..."
                            width="120%"
                            liveChange="onSearch"
                        />
                    </HBox>
                    <HBox
                        alignItems="Center"
                        justifyContent="End"
                        width="20%"
                        class="rightIcons"
                    >
                        <Button
                            icon="sap-icon://customer"
                            press="onProfilePress"
                            class="largeIconButton"
                        />
                        <Button
                            icon="sap-icon://heart"
                            press="onWishlistPress"
                            class="largeIconButton"
                        />
                        <Button
                            icon="sap-icon://cart"
                            press="onCartPress"
                            class="largeIconButton"
                        />
                    </HBox>
                </HBox>
            </VBox>
            <VBox class="mainContainer">

                <Title
                    text="Grains (Atta &amp; Rice)"
                    level="H2"
                    textAlign="Center"
                />

                <HBox
                    id="grainsList"
                    wrap="Wrap"
                    class="HSection"
                    justifyContent="Start"
                    items="{/Product}"
                >

                    <items>

                        <VBox>

                            <VBox class="itemCard">

                                <Image
                                    src="{image}"
                                    width="100%"
                                />

                            </VBox>

                            <VBox class="itemText">

                                <Text
                                    text="{name}"
                                    class="itemName"
                                />

                                <Text
                                    text="{quantity}"
                                    class="itemWeight"
                                />

                                <Text
                                    text="₹{price}"
                                    class="itemPrice"
                                />

                                <Button
                                    text="Add to Cart"
                                    press="onAddToCart"
                                    class="addtocartButton"
                                />

                            </VBox>

                        </VBox>

                    </items>

                </HBox>

                <HBox
                    id="essentialsList"
                    wrap="Wrap"
                    class="HSection"
                    justifyContent="Start"
                    items="{/Product}"
                >

                    <items>

                        <VBox>

                            <VBox class="itemCard">

                                <Image
                                    src="{image}"
                                    width="100%"
                                />

                            </VBox>

                            <VBox class="itemText">

                                <Text
                                    text="{name}"
                                    class="itemName"
                                />

                                <Text
                                    text="{quantity}"
                                    class="itemWeight"
                                />

                                <Text
                                    text="₹{price}"
                                    class="itemPrice"
                                />

                                <Button
                                    text="Add to Cart"
                                    press="onAddToCart"
                                    class="addtocartButton"
                                />

                            </VBox>

                        </VBox>

                    </items>

                </HBox>


            </VBox>
        </content>
    </Page>
</mvc:View>
