<mvc:View controllerName="project.controller.fruitVegetable"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page id="page2" showHeader="false">
        <content>
            <VBox class="customNavBar">
                <HBox alignItems="Center" justifyContent="SpaceBetween" height="3rem" width="100%">
                    
                    <!-- Left Section: Menu + Logo -->
                    <HBox alignItems="Center" class="leftSection" width="20%">
                        <Button icon="sap-icon://menu" press="onMenuPress" class="largeIconButton" type="Transparent"/>
                        <HBox alignItems="Center" class="logoBox">
                            <Text text="Fresh" class="freshText"/>
                            <Text text="Mart" class="martText"/>
                        </HBox>
                    </HBox>

                    <!-- Middle Section: Search -->
                    <HBox width="50%" class="searchBox" alignItems="Center">
                        <SearchField placeholder="Search groceries..." width="120%" liveChange="onSearch"/>
                    </HBox>

                    <!-- Right Section: Icons -->
                    <HBox alignItems="Center" justifyContent="End" width="20%" class="rightIcons">
                        <Button icon="sap-icon://customer" press="onProfilePress" class="largeIconButton" type="Transparent"/>
                        <Button icon="sap-icon://heart" press="onWishlistPress" class="largeIconButton" type="Transparent"/>
                        <Button icon="sap-icon://cart" press="onCartPress" class="largeIconButton" type="Transparent"/>
                    </HBox>                    
                </HBox>
            </VBox>

            <VBox class="mainContainer">          
                <Title text="Fruits &amp; Vegetables" level="H1" textAlign="Center" />
                <!-- Fruits Section -->
                <HBox id="fruitList" wrap="Wrap" class="HSection" justifyContent="Start" items="{/Product}">
                    <items>
                        <VBox>
                            <VBox class="itemCard">
                                <Image src="images/Banana.png
                                " width="100%" />
                            </VBox>
                            <VBox class="itemText">
                                <Text text="{name}" class="itemName" />
                                <Text text="{quantity}" class="itemWeight" />
                                <Text text="₹{price}" class="itemPrice" />
                                <Button text="Add to Cart" press="onAddToCart" class="addtocartButton"/>
                            </VBox>
                        </VBox>
                    </items>
                </HBox>

                <!-- Vegetables Section -->
                <HBox id="vegetableList" wrap="Wrap" class="HSection" justifyContent="Start" items="{/Product}">
                    <items>
                        <VBox>
                            <VBox class="itemCard">
                                <Image src="images/Potato.png" width="100%" /> 
                            </VBox>
                            <VBox class="itemText">
                                <Text text="{name}" class="itemName" />
                                <Text text="{quantity}" class="itemWeight" />
                                <Text text="₹{price}" class="itemPrice" />
                                <Button text="Add to Cart" press="onAddToCart" class="addtocartButton"/>
                            </VBox>
                        </VBox>
                    </items>
                </HBox>


            </VBox>       
        </content>
    </Page>
    <Panel
        id="cartPanel"
        class="cartPanel"
        expandable="false"
        visible="false"
        width="30%"
        height="100%"
    >
        <Button
            icon="sap-icon://decline"
            type="Transparent"
            press="onCloseCart"
            class="closeCartButton"
        />
        <VBox id="cartItemsContainer" class="cartItemsContainer">
            <!-- Cart items will be dynamically added here -->        
            
        </VBox>
        
        <Text id="totalPriceText" class="totalPriceText" text="Total: ₹0" />

        <Button text="Place Order" press="onPlaceOrder" type="Emphasized" class="placeOrderButton" />
    </Panel>
</mvc:View>
