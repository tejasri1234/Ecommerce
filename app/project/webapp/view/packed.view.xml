<mvc:View controllerName="project.controller.packed"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m">
    <Page id="page7" showHeader="false">
        <content>
            <VBox class="customNavBar">
                <HBox alignItems="Center" justifyContent="SpaceBetween" height="3rem" width="100%">
                    
                    <!-- Left Section: Menu + Logo -->
                    <HBox alignItems="Center" class="leftSection" width="20%">
                        <Button icon="sap-icon://menu" press="onMenuPress" class="largeIconButton" type="Transparent"/>
                        <HBox alignItems="Center" class="logoBox">
                            <Text text="Fresh" class="freshText"/>
                            <Text text="Mart" class="martText"/>
                        </HBox>
                    </HBox>

                    <!-- Middle Section: Search -->
                    <HBox width="50%" class="searchBox" alignItems="Center">
                        <SearchField placeholder="Search groceries..." width="120%" liveChange="onSearch"/>
                    </HBox>

                    <!-- Right Section: Icons -->
                    <HBox alignItems="Center" justifyContent="End" width="20%" class="rightIcons">
                        <Button icon="sap-icon://customer" press="onProfilePress" class="largeIconButton" type="Transparent"/>
                        <Button icon="sap-icon://heart" press="onWishlistPress" class="largeIconButton" type="Transparent"/>
                        <Button icon="sap-icon://cart" press="onCartPress" class="largeIconButton" type="Transparent"/>
                    </HBox>                    
                </HBox>
            </VBox>

            <VBox class="mainContainer">          
                <!-- Breakfast Instant Section -->
                <Title text="Breakfast Instant" level="H2" textAlign="Center" />
                <HBox id="breakfastList" wrap="Wrap" class="HSection" justifyContent="Start" items="{/Product}">
                    <items>
                        <VBox>
                            <VBox class="itemCard">
                                <Image src="images/Banana.png" width="100%" />
                            </VBox>
                            <VBox class="itemText">
                                <Text text="{name}" class="itemName" />
                                <Text text="{quantity}" class="itemWeight" />
                                <Text text="₹{price}" class="itemPrice" />
                                <Button text="Add to Cart" press="onAddToCart" class="addtocartButton"/>
                            </VBox>
                        </VBox>
                    </items>
                </HBox>

                <!-- Instant Noodles Section -->
                <Title text="Instant Noodles" level="H2" textAlign="Center" />
                <HBox id="noodlesList" wrap="Wrap" class="HSection" justifyContent="Start" items="{/Product}">
                    <items>
                        <VBox>
                            <VBox class="itemCard">
                                <Image src="images/Banana.png" width="100%" />
                            </VBox>
                            <VBox class="itemText">
                                <Text text="{name}" class="itemName" />
                                <Text text="{quantity}" class="itemWeight" />
                                <Text text="₹{price}" class="itemPrice" />
                                <Button text="Add to Cart" press="onAddToCart" class="addtocartButton"/>
                            </VBox>
                        </VBox>
                    </items>
                </HBox>

                


            </VBox>       
        </content>
    </Page>
</mvc:View>
